programa ejemplo
procesos
  proceso recorrerAvenida (E AvActual:numero)
  variables
    p:numero
    CaActual:numero
  comenzar
    repetir 99
      CaActual:=PosCa
      mientras (HayPapelEnLaEsquina)
        tomarPapel
        p:=p+1
        si (p=5)
          p:=0
          BloquearEsquina (50,50)
          Pos (50,50)
          mientras (HayPapelEnLaBolsa)
            depositarPapel
          Pos (AvActual,CaActual)
          LiberarEsquina (50,50) 
      mover
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      p:=p+1
      si (p=5)
        p:=0
        BloquearEsquina (50,50)
        Pos (50,50)
        mientras (HayPapelEnLaBolsa)
          depositarPapel
        Pos (AvActual,CaActual)
        LiberarEsquina (50,50)
  fin
areas
  ARP1: AreaP (5,1,5,100)
  ARP2: AreaP (10,1,10,100)
  ARC1: AreaP (11,1,11,1)
  ARC2: AreaP (12,1,12,1)
  Esquina: AreaPC (50,50,50,50)
robots
  robot robotProductor1
  comenzar
    recorrerAvenida (5)
  fin
  robot robotProductor2
  comenzar
    recorrerAvenida (10)
  fin
  robot robotConsumidor1
  variables
    pEsquina:numero
    pGenerada: numero
    cantSeguidas:numero
  comenzar
    mientras (cantSeguidas<8)
      Random (pGenerada,2,5)
      BloquearEsquina (50,50)
      Pos (50,50)
      mientras (HayPapelEnLaEsquina)
        tomarPapel
        pEsquina:=pEsquina+1
      si (pEsquina>=pGenerada)
        cantSeguidas:=0
        repetir (pEsquina-pGenerada)
          depositarPapel
        Pos (11,1)
        LiberarEsquina (50,50)
        repetir pGenerada
          depositarPapel
        pEsquina:=0
      sino
        cantSeguidas:=cantSeguidas+1
        repetir pEsquina
          depositarPapel
        pEsquina:=0
        Pos (11,1)
        LiberarEsquina (50,50)
  fin
  robot robotConsumidor2
  variables
    pEsquina:numero
    pGenerada: numero
    cantSeguidas:numero
  comenzar
    mientras (cantSeguidas<8)
      Random (pGenerada,2,5)
      BloquearEsquina (50,50)
      Pos (50,50)
      mientras (HayPapelEnLaEsquina)
        tomarPapel
        pEsquina:=pEsquina+1
      si (pEsquina>=pGenerada)
        cantSeguidas:=0
        repetir (pEsquina-pGenerada)
          depositarPapel
        Pos (12,1)
        LiberarEsquina (50,50)
        repetir pGenerada
          depositarPapel
        pEsquina:=0
      sino
        cantSeguidas:=cantSeguidas+1
        repetir pEsquina
          depositarPapel
        pEsquina:=0
        Pos (12,1)
        LiberarEsquina (50,50)
  fin
variables
  RP1: robotProductor1
  RP2: robotProductor2
  RC1: robotConsumidor1
  RC2: robotConsumidor2
comenzar
  AsignarArea (RP1, ARP1)
  AsignarArea (RP2, ARP2)
  AsignarArea (RC1, ARC1)
  AsignarArea (RC2, ARC2)
  AsignarArea (RP1, Esquina) 
  AsignarArea (RP2, Esquina) 
  AsignarArea (RC1, Esquina) 
  AsignarArea (RC2, Esquina) 
  Iniciar (RP1,5,1)
  Iniciar (RP2,10,1)
  Iniciar (RC1,11,1)
  Iniciar (RC2,12,1)
fin