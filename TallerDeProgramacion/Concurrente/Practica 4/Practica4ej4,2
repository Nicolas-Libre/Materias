programa ejemplo
procesos
  proceso HacerTarea(E tarea: numero)
  comenzar
    si (tarea=1)
      mientras (HayFlorEnLaEsquina)
        tomarFlor
    sino
      si (tarea=2)
        mientras (HayPapelEnLaEsquina)
          tomarPapel
      sino
        mientras (HayFlorEnLaBolsa)
          depositarFlor
        mientras (HayPapelEnLaBolsa)
          depositarPapel 
  fin
areas
  cuadrante: AreaPC (2,2,100,100)
  AR1: AreaP (2,1,2,1)
  AR2: AreaP (3,1,3,1)
  ARJ: AreaP (1,1,1,1)
robots
  robot robotTrabajador
  variables
    soy:numero
    AvMov:numero
    CaMov:numero
    tarea:numero
    sigo:boolean
    AvInicial:numero
    CaInicial:numero
  comenzar
    sigo:=V
    AvInicial:=PosAv
    CaInicial:=PosCa
    RecibirMensaje (soy,RJ)
    mientras(sigo=V)
      RecibirMensaje (tarea,RJ)
      si (tarea <>4)
        RecibirMensaje (AvMov,RJ)
        RecibirMensaje (CaMov,RJ)
        Pos(AvMov,CaMov)
        HacerTarea (tarea)
        Pos (AvInicial,CaInicial)
        EnviarMensaje (V,RJ)
      sino
        sigo:=F     
  fin
  robot robotJefe
  variables
    soy:numero
    tarAleatoria:numero
    AvAleatoria:numero
    CaAleatoria:numero
    ok:boolean
  comenzar
    EnviarMensaje (1,r1)
    EnviarMensaje (2,r2)
    repetir 10
      Random (tarAleatoria,1,3)
      Random (soy,1,2)
      Random (AvAleatoria,2,100)
      Random (CaAleatoria,2,100)
      si (soy=1)
        EnviarMensaje (tarAleatoria,r1)
        EnviarMensaje (AvAleatoria,r1)
        EnviarMensaje (CaAleatoria,r1)
        RecibirMensaje (ok,r1)
      sino
        EnviarMensaje (tarAleatoria,r2)
        EnviarMensaje (AvAleatoria,r2)
        EnviarMensaje (CaAleatoria,r2)
        RecibirMensaje (ok,r2)
    EnviarMensaje (4,r1)
    EnviarMensaje (4,r2)
  fin
variables
  r1,r2: robotTrabajador
  RJ:robotJefe
comenzar
  AsignarArea(r1, cuadrante)
  AsignarArea(r2, cuadrante)
  AsignarArea(r1, AR1)
  AsignarArea(r2, AR2)
  AsignarArea(RJ, ARJ)
  Iniciar(RJ, 1,1)
  Iniciar (r1,2,1)
  Iniciar(r2,3,1)
fin