programa ejemplo
procesos
  proceso juntarFlores (ES f:numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso MoveryJuntar( ES f:numero)
  comenzar
    repetir 9
      juntarFlores (f)
      mover
    juntarFlores (f)
  fin
areas 
  AR1: AreaP (1,1,1,10)
  AR2: AreaP (2,11,2,20)
robots
  robot robot1
  variables
    f1:numero
    f2:numero
  comenzar
    MoveryJuntar (f1)
    EnviarMensaje (f1,r2)
    RecibirMensaje (f2,r2)
    si (f1>=f2)
      Informar (f1-f2) 
  fin
  robot robot2
  variables  
    f2:numero
    f1:numero
  comenzar
    MoveryJuntar (f2)
    EnviarMensaje (f2,r1)
    RecibirMensaje (f1,r1)
    si (f2>=f1)
      Informar (f2-f1)
  fin
variables
  r1: robot1
  r2: robot2
comenzar
  AsignarArea(r1, AR1)
  AsignarArea(r2, AR2)
  Iniciar (r1,1,1)
  Iniciar (r2,2,11)
fin