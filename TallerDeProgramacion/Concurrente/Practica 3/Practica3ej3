programa ejemplo
procesos
  proceso CalcularMaximo(E f1: numero; E f2: numero; E f3: numero; E f4: numero; ES Rmax:numero)
  comenzar
    si (f1> f2) & (f1>f3) & (f1>f4)
      Rmax:=1
    sino
      si f2>f3 & f2>f4
        Rmax:=2
      sino
        si f3>f4
          Rmax:=3
        sino
          Rmax:=4
  fin
areas
  ciudad: AreaPC (2,2,10,10)
  AR1: AreaP (2,1,2,1)
  AR2: AreaP (3,1,3,1)
  AR3: AreaP (4,1,4,1)
  AR4: AreaP (5,1,5,1)
  ARJ: AreaP (1,1,1,1)
robots
  robot robotFlores
  variables
    soy:numero
    Av:numero
    Ca:numero
    AvInicial:numero
    CaInicial:numero
    f:numero
    noHayMas:boolean
  comenzar
    f:=0
    noHayMas:=F
    AvInicial:=PosAv
    CaInicial:=PosCa
    RecibirMensaje (soy,RJ)
    RecibirMensaje (Av, RJ)
    RecibirMensaje (Ca,RJ)
    si (noHayMas=F)
      BloquearEsquina (Av,Ca)
      Pos (Av,Ca)
      si (HayFlorEnLaEsquina)
        tomarFlor
        f:=f+1
      si ~(HayFlorEnLaEsquina)
        noHayMas:=V
      Pos (AvInicial, CaInicial)
      LiberarEsquina (Av,Ca)
    EnviarMensaje (soy,RJ)
    EnviarMensaje (f,RJ)
  fin
  robot robotJefe
  variables
    Av:numero
    Ca:numero
    soy:numero
    f1,f2,f3,f4:numero
    Rmax:numero
    noHayMas:boolean
  comenzar
    EnviarMensaje (1,r1)
    EnviarMensaje (2,r2)
    EnviarMensaje (3,r3)
    EnviarMensaje (4,r4)
    Random (Av,2,10)
    Random (Ca,2,10)
    EnviarMensaje (Av, r1)
    EnviarMensaje (Ca, r1)
    EnviarMensaje (Av, r2)
    EnviarMensaje (Ca, r2)
    EnviarMensaje (Av, r3)
    EnviarMensaje (Ca, r3)
    EnviarMensaje (Av, r4)
    EnviarMensaje (Ca, r4)
    repetir 4
      RecibirMensaje (soy,*)
      si (soy=1)    
        RecibirMensaje (f1,r1)
      sino
        si (soy=2)  
          RecibirMensaje (f2,r2)
        sino
          si (soy=3)
            RecibirMensaje (f3,r3)
          sino
            RecibirMensaje (f4,r4)
    CalcularMaximo (f1,f2,f3,f4,Rmax)
    Informar (Rmax)
  fin
variables
  r1,r2,r3,r4: robotFlores
  RJ:robotJefe
comenzar
  AsignarArea(r1, ciudad)
  AsignarArea(r2, ciudad)
  AsignarArea(r3, ciudad)
  AsignarArea(r4, ciudad)
  AsignarArea(r1,AR1)
  AsignarArea(r2,AR2)
  AsignarArea(r3,AR3)
  AsignarArea(r4,AR4)
  AsignarArea(RJ,ARJ)
  Iniciar(r1, 2,1)
  Iniciar(r2, 3,1)
  Iniciar(r3, 4,1)
  Iniciar(r4, 5,1)
  Iniciar(RJ, 1,1)
fin