programa ejemplo
procesos
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso juntarFlores (ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
      
  proceso recorrerAvenidaFlor (ES f:numero)
  comenzar
    repetir 9
      juntarFlores (f)
      mover
    juntarFlores (f)
  fin
  proceso recorrerAvenidaPapel
  comenzar
    repetir 9
      juntarPapeles
      mover
    juntarPapeles 
  fin
  proceso Calcular2Maximos (E f1:numero; E f2:numero; E f3:numero; ES max1:numero; ES max2:numero)
  comenzar
    si (f1>f2)
      max1:=1
      si (f2>f3)
        max2:=2
      sino
        max2:=3
    sino
      max1:=2
      si (f1>f3)
        max2:=1
      sino
        max2:=3
  fin   
areas
  AR1: AreaP (5,1,5,10)
  AR2: AreaP (6,1,6,10)
  AR3: AreaP (7,1,7,10)
  ARF: AreaP (1,1,1,1)
robots
  robot robotRecolector
  variables
    soy:numero
    f:numero
    AvInicial:numero
    CaInicial:numero
    sigo:boolean
  comenzar
    AvInicial:=PosAv
    CaInicial:=PosCa
    RecibirMensaje (soy,RF)
    recorrerAvenidaFlor(f)
    EnviarMensaje (soy,RF)
    EnviarMensaje (f,RF)
    RecibirMensaje (sigo,RF)
    si (sigo=V)
      Pos (AvInicial,CaInicial)
      recorrerAvenidaPapel
      EnviarMensaje (soy,RF)
  fin
  robot robotFis
  variables
    soy:numero
    f1,f2,f3:numero
    primero,ultimo:numero
    max1:numero
    max2:numero
  comenzar
    EnviarMensaje (1,r1)
    EnviarMensaje (2,r2)
    EnviarMensaje (3,r3)
    repetir 3
      RecibirMensaje (soy,*)
      si (soy=1)
        RecibirMensaje (f1,r1)
      sino
        si (soy=2)
          RecibirMensaje (f2,r2)
        sino
          RecibirMensaje (f3,r3)
    Calcular2Maximos (f1,f2,f3,max1,max2)
    si (max1=1)
      EnviarMensaje (V,r1)
      si (max2=2)
        EnviarMensaje (V,r2)
        EnviarMensaje (F,r3)
      sino
        EnviarMensaje (V,r3)
        EnviarMensaje (F,r2)
    sino
      si (max1=2)
        EnviarMensaje (V,r2)
        si (max2=1)
          EnviarMensaje (V,r1)
          EnviarMensaje (F,r3)
        sino
          EnviarMensaje (V,r3)
          EnviarMensaje (F,r1)
      sino
        EnviarMensaje (V,r3)
        si (max2=1)
          EnviarMensaje (V,r1)
          EnviarMensaje (F,r2)
        sino
          EnviarMensaje (V,r2)
          EnviarMensaje (F,r3)
    repetir 2
      RecibirMensaje (soy,*)
      si (soy=1)
        si ((primero <> 2) & (primero <>3))
          primero:=1
        sino
          ultimo:=1
      sino
        si (soy=2)
          si ((primero <>1) & (primero<>3))
            primero:=2
          sino
            ultimo:=2
        sino
          si ((primero <>1) & (primero<>2))
            primero:=3
          sino
            ultimo:=3
    Informar ('el robotoo que termino primero fue el robott ', primero)
  fin
variables
  r1,r2,r3: robotRecolector
  RF: robotFis
comenzar
  AsignarArea(r1, AR1)
  AsignarArea(r2, AR2)
  AsignarArea(r3, AR3)
  AsignarArea(RF, ARF)
  Iniciar(RF, 1,1)
  Iniciar(r1, 5,1)
  Iniciar(r2, 6,1)
  Iniciar(r3, 7,1)
fin