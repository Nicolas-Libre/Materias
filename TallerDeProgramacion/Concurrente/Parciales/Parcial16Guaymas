programa ejemplo
procesos
  proceso juntarFlores (ES f:numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
areas
  Recorrido: AreaPC (1,1,61,61)
  ARF: AreaP (100,100,100,100)
robots
  robot robotFlorero1
  variables
    soy:numero
    f:numero
    calle:numero
  comenzar
    f:=0
    RecibirMensaje (soy,RF)
    RecibirMensaje (calle,RF)
    repetir (calle-2)
      juntarFlores(f)
      mover
    juntarFlores(f)
    BloquearEsquina (6,calle)
    mover
    juntarFlores (f)
    EnviarMensaje (soy,RF)
    EnviarMensaje (V,RF)
    mover
    LiberarEsquina (6,calle)
    repetir (60-calle)
      juntarFlores(f)
      mover
    juntarFlores(f)
    EnviarMensaje (soy,RF)
    EnviarMensaje (f,RF)   
  fin
  robot robotFlorero2
  variables
    soy:numero
    f:numero
    calle:numero
  comenzar
    f:=0
    RecibirMensaje (soy,RF)
    RecibirMensaje (calle,RF)
    Pos (1,calle)
    derecha
    repetir 4
      juntarFlores (f)
      mover
    juntarFlores(f)
    BloquearEsquina (6,calle)
    mover
    juntarFlores(f)
    EnviarMensaje (soy,RF)
    EnviarMensaje (V,RF)
    mover
    LiberarEsquina (6,calle)
    repetir 54
      juntarFlores(f)
      mover
    juntarFlores (f)
    EnviarMensaje (soy,RF)
    EnviarMensaje (f,RF)
  fin
  robot robotFis
  variables
    soy:numero
    f1,f2:numero
    primero,ultimo:numero
    calle:numero
    llegoR1,llegoR2:boolean
    max:numero
  comenzar
    primero:=0
    ultimo:=0
    f1:=0
    f2:=0
    max:=0
    EnviarMensaje (1,r1)
    EnviarMensaje (2,r2)
    Random (calle,2,50)
    EnviarMensaje (calle,r2)
    EnviarMensaje (calle,r1)
    repetir 2
      RecibirMensaje (soy,*)
      si (soy=1)
        RecibirMensaje (llegoR1,r1)
        si (primero<>2)
          primero:=1
          ultimo:=2
      sino
        RecibirMensaje (llegoR2,r2)
        si (primero<>1)
          primero:=2
          ultimo:=1
    repetir 2
      RecibirMensaje (soy,*)
      si (soy=1)
        RecibirMensaje (f1,r1)
      sino
        RecibirMensaje (f2,r2)
    si primero=1
      Informar ('el robott que llego primero fue el robott ', primero)
      Informar ('junto una cantidad de flores iguales a ', f1)
    sino
      Informar ('el robott que llego primero fue el robott ', primero)
      Informar ('junto una cantidad de flores iguales a ', f2)
  fin   
variables
  r1: robotFlorero1
  r2:robotFlorero2
  RF:robotFis
comenzar
  AsignarArea(r1, Recorrido)
  AsignarArea(r2, Recorrido)
  AsignarArea(RF, ARF)
  Iniciar(r1, 6,1)
  Iniciar (r2,1,2)
  Iniciar (RF,100,100)
fin